<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user16.firedbnext.MainActivity" >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="Android / Firebase Insurance Application"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:textColor="@color/ncolor"
                    android:textAlignment="center"/>

            </RelativeLayout>




        </LinearLayout>

        <View android:layout_width="wrap_content" android:layout_height="65dp"> </View>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/onelogo"
            android:src="@drawable/onelogo" />

        <View android:layout_width="wrap_content" android:layout_height="65dp"> </View>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblEmail"
                android:textStyle="bold"
                android:textColor="@color/ncolor"
                android:layout_marginRight="4dp"
                android:text="Email-Addr:  "/>

            <EditText
                android:layout_width="190dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:id="@+id/txtEMail"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:background="@layout/rounded_buttons_settings"
                android:textColor="@color/wcolor"
                android:layout_alignParentRight="true"
                android:text="" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtPass"
                android:textStyle="bold"
                android:textColor="@color/ncolor"
                android:layout_marginRight="4dp"
                android:text="Password:  "/>

            <EditText
                android:layout_width="190dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:id="@+id/txtPassVal"
                android:background="@layout/rounded_buttons_settings"
                android:textColor="@color/wcolor"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:inputType="textPassword"
                android:password="true"
                android:text="" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/ncolor">  </View>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/wcolor">  </View>

        <Button
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/wcolor"
            android:background="@layout/rounded_buttons_settings"
            android:onClick="signWithEmail"
            android:id="@+id/btnSigns"
            android:text="Sign-In Now"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/wcolor">  </View>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/ncolor">  </View>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/wcolor">  </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtViewSignIn"
            android:textStyle="bold"
            android:textAlignment="center"
            android:onClick="alReadyReg"
            android:textColor="@color/ncolor"
            android:text="Already Registered? Sign in here"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>

</RelativeLayout>

</ScrollView>
