<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_terms_conditions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.user16.firedbnext.terms_conditions">


    <View
        android:layout_width="match_parent"
        android:layout_height="35dp"></View>


    <TextView
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:text="Terms And Conditions:"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"></View>

    <!-- <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/gcolor">

    </View> -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/terms"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="15dp"
        android:background="@layout/edit_text"/>
    <!-- android:textColor="@color/wcolor" -->

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"></View>

    <!-- <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#80b548">

    </View>  -->

    <View
        android:layout_width="match_parent"
        android:layout_height="45dp"></View>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I, Agree To Terms And Conditions"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:checked="false"
        android:id="@+id/chTerms"
        android:textColor="@color/ncolor"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="45dp"></View>

    <Button
        android:layout_width="287dp"
        android:layout_height="32dp"
        android:text="Continue To Main Menu"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/ncolor"
        android:background="@layout/edit_text"
        android:onClick="btnViewTerms"
        android:gravity="center"/>

</LinearLayout>
