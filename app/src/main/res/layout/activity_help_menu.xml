<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.user16.firedbnext.HelpMenu"
    android:id="@+id/activity_help_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="23dp"></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Help  Menu Page:"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/ncolor"
        android:textSize="21dp"
        /> <!--       android:background="@layout/edit_text"    -->


    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"></View>

    <!--  android:paddingBottom="15dp" -->
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@layout/rounded_buttons_settings"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="23dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPTION 1: Call For Help"
            android:layout_alignParentLeft="true"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/ncolor"
            android:layout_centerHorizontal="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="23dp"></View>


        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/phoneLabel"
            android:text="Phone Call:" android:layout_alignParentLeft="true"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/ncolor"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="191dp"
            android:layout_height="33dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:onClick="makeACall"
            android:id="@+id/btnPhoneCall"
            android:text="Phone Call:"
            android:textColor="@color/wcolor"
            android:layout_alignParentTop="true"
            android:background="@layout/rounded_buttons_settings"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"></View>

    </LinearLayout>

    <!-- <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@layout/rounded_buttons_settings"></View> -->

    <View
        android:layout_width="match_parent"
        android:layout_height="23dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPTION 2: Send Email"
            android:layout_alignParentLeft="true"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/ncolor"
            android:layout_centerHorizontal="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="23dp"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="Send Email: "
                android:textStyle="bold"
                android:id="@+id/txtEMAIL"
                android:textColor="@color/ncolor"
                android:layout_alignParentLeft="true"
                android:gravity="center"/>

            <EditText
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:id="@+id/emailMessage"
                android:background="@layout/edit_text"
                />

            <!-- android:layout_toEndOf="@+id/txtEMAIL"   -->

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="23dp"></View>

        <Button
            android:layout_width="261dp"
            android:layout_height="33dp"
            android:text="Send Your Mail"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/wcolor"
            android:textSize="16dp"
            android:onClick="sendYourEmail"
            android:background="@layout/rounded_buttons_settings"
            android:textStyle="bold"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"></View>

    <!--  android:paddingBottom="15dp" -->
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@layout/rounded_buttons_settings"></View>
</LinearLayout>
